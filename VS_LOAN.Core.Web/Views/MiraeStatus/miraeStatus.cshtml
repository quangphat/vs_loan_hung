    function getValueDisplay(value, type='TYPE') {

        if (isNullOrWhiteSpace(type))
            return value
        if (isNullOrWhiteSpace(value))
            value = ''
        var display = value;
        switch (type) {
            case 'datetime':
                display = FormatDateTimeDMY(value);
            default: break;
        }
        return display;
    }

