                            <textarea type="text" id="CurAddressStreet" value="@ViewBag.model.CurAddressStreet" placeholder="Nhập địa chỉ" class="form-control"></textarea>
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="form-field-1" class="col-sm-2 control-label no-padding-right">Số nhà địa chỉ<span class="required">(*)</span></label>
                        <div class="col-sm-10">
                            <textarea type="text" id="CurAddressNumber" value="@ViewBag.model.CurAddressNumber" placeholder="Nhập địa chỉ" class="form-control"></textarea>
                        </div>
                    </div>



<div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right">Địa chỉ thường trú trùng địa chỉ hiện tại *</label>
