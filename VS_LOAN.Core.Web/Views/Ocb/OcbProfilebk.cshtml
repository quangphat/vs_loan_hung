                            <select id="ddlHuyen" class="chosen-select form-control" data-placeholder="Chọn quận huyện" @ViewBag.disable >
                                <option value="0"></option>
                            </select>
                        </div>


                    </div>


                    <div class="form-group">

                        <label class="col-sm-2 control-label no-padding-right">Phường/Xã<span class="required">(*)</span></label>
