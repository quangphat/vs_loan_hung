                                <input name="IsDuplicateAdrees" type="radio" value="false" class="ace" id ="IsDuplicateAdreesNo">
                                <span class="lbl"> Không</span>
                            </label>
                        </div>
                        
              </div>
			  
			 



                    <h3 class="header smaller lighter blue">Thông tin về địa chỉ thường trú`</h3>
                    <div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right">Tỉnh/TP<span class="required">(*)</span></label>
                        <div class="col-sm-4">
                            <select id="RegAddressProvinceId" class="chosen-select form-control" data-placeholder="Chọn tỉnh thành phố" @ViewBag.disable>
                                <option value="0"></option>
                            </select>
                        </div>
                        <label class="col-sm-2 control-label no-padding-right">Quận/huyện<span class="required">(*)</span></label>
                        <div class="col-sm-4">
                            <select id="RegAddressDistId" class="chosen-select form-control" data-placeholder="Chọn quận huyện" @ViewBag.disable>
                                <option value="0"></option>
                            </select>
                        </div>


                    </div>


                    <div class="form-group">

                        <label class="col-sm-2 control-label no-padding-right">Phường/xã<span class="required">(*)</span></label>
                        <div class="col-sm-4">
                            <select id="RegAddressWardId" class="chosen-select form-control" data-placeholder="Chọn đường" @ViewBag.disable>
                                <option value="0"></option>
                            </select>
                        </div>

                    </div>



                    <div class="form-group">
                        <label for="form-field-1" class="col-sm-2 control-label no-padding-right">Thôn ấp<span class="required">(*)</span></label>
                        <div class="col-sm-10">
                            <textarea type="text" id="RegAddressRegion" placeholder="Nhập địa chỉ" class="form-control"></textarea>
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="form-field-1" class="col-sm-2 control-label no-padding-right">Tên đường<span class="required">(*)</span></label>
                        <div class="col-sm-10">
                            <textarea type="text" id="RegAddressStreet" placeholder="Nhập địa chỉ" value="@ViewBag.model.RegAddressStreet" class="form-control"></textarea>
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="form-field-1" class="col-sm-2 control-label no-padding-right">Số nhà địa chỉ<span class="required">(*)</span></label>
                        <div class="col-sm-10">
                            <textarea type="text" id="RegAddressNumber" placeholder="Nhập địa chỉ" value="@ViewBag.model.RegAddressNumber" class="form-control"></textarea>
                        </div>
                    </div>






                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <h3 class="header smaller lighter blue">2.Thông tin khoản vay và sản phẩm:</h3>
                <form class="form-horizontal" role="form">

                    <div class="form-group">
                        <label for="form-field-1" class="col-sm-2 control-label no-padding-right">Thông tin thu nhập<span class="required">(*)</span></label>
                        <div class="col-sm-4">
                            <input type="text" id="txtInCome" value="@ViewBag.model.InCome" placeholder="Nhập thông tin thu nhập" class="form-control">
                        </div>

                    </div>




                    <div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right">Loại sản phẩm vay<span class="required">(*)</span></label>
                        <div class="col-sm-4">
                            <select id="ddlloaisanpham" class="chosen-select form-control" data-placeholder="Chọn loại sản phẩm vay">

                                <option value="100"> VAY THEO GPLX-HK</option>
                                <option value="9">VAY THEO LƯƠNG</option>
                            </select>
                        </div>
                        <label class="col-sm-2 control-label no-padding-right">Sản phẩm vay<span class="required">(*)</span></label>
                        <div class="col-sm-4">
                            <select id="ddlSanPhamVay" class="chosen-select form-control" data-placeholder="Chọn sản phẩm vay">
                                <option value="0"></option>
                            </select>
                        </div>
                    </div>



                    <div class="form-group">
                        <label for="form-field-1" class="col-sm-2 control-label no-padding-right">Số tiền đề nghị vay<span class="required">(*)</span></label>
                        <div class="col-sm-4">
                            <input type="text" id="txtTienDeNghiVay" value="@ViewBag.model.RequestLoanAmount" placeholder="Nhập số tiền đề nghị vay" class="form-control">
                        </div>
                        <label class="col-sm-2 control-label no-padding-right">Thời hạn vay</label>
                        <div class="col-sm-4">
                            <input type="text" id="spnThoiHanVay" value="@ViewBag.model.RequestLoanTerm" />
                        </div>
                    </div>



                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <h3 class="header smaller lighter blue">3.Thông tin thêm:</h3>


            </div>

        </div>
        <div class="row">
            <div class="col-xs-12">
                <hr />
                <form class="form-horizontal">
                    <h4 class="header lighter orange"><i class="ace-icon fa fa-bell"></i>Ghi chú hồ sơ</h4>

                    @if (GlobalData.User.UserType == (int)UserTypeEnum.Admin)
                    {


                        <div class="form-group">
                            <label class="col-sm-1  col-xs-12 control-label no-padding-right" for="form-field-1">Trạng thái</label>
                            <div class="col-sm-5 col-xs-12 ">
                                <select id="ddlStatus" class="chosen-select form-control" data-placeholder="Chọn trạng thái" >
                                   
                                  
                                </select>
                            </div>

                        </div>
                    }


                    @if (GlobalData.User.UserType != (int)UserTypeEnum.Admin)
                    {

                        <div class="form-group">
                            <label class="col-sm-1  col-xs-12 control-label no-padding-right" for="form-field-1">Trạng thái</label>
                            <div class="col-sm-5 col-xs-12 ">
                                <select id="ddlStatus" class="chosen-select form-control" data-placeholder="Trạng thái">
                                   
                                  
                                </select>
                            </div>

                        </div>
                    }

                    <div class="form-group">
                        <label class="col-sm-1  col-xs-12 control-label no-padding-right" for="form-field-1">Ghi chú</label>
                        <div class="col-md-11 col-sm-12 col-xs-12">
                            <textarea class="form-control" id="txtGhiChu" style="margin: 0px -4.5px 0px 0px; height: 50px;" placeholder="Nhập ghi chú"></textarea>
                        </div>
                        <div class="col-md-8">
                            <div class="activity-log">
                                <div class="timline-addNote only-new-note">
                                    <div class="timeline-date-event timline-date-event--margin mt-0" id="dsGhichu">


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="pull-right">
                        <a class="btn btn-sm btn-primary" href="/Ocb/Index">
                            Quay lại
                        </a>
                        <a class="btn btn-sm btn-primary" id="btnAddNote">
                            Thêm ghi chú
                        </a>
						
					  
							
							<a class="btn btn-sm btn-primary" id="btn_Temp">
                            Cập nhật
							</a>
							@if (GlobalData.User.UserType == (int)UserTypeEnum.Admin)
								
								{
									
									<a class="btn btn-sm btn-primary" id="btn_Save">
                                Nộp hồ sơ qua OCB
                            </a>
								}
							
							
							
						
                        
						
                       
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        $('#btnAddNote').click(function (e) {

            let objectSend = JSON.stringify({
                "Value": $("#txtGhiChu").val()
            });

            $.ajax({
                traditional: false,
                url: `/Ocb/AddNote?profileId=${@ViewBag.model.Id}`,
                type: "POST",
                contentType: "application/json; charset=utf-8",
                data: objectSend,
                success: function (data) {
                    if (data.success == true) {
                            swal({
                                title: "@Html.Raw(Global.Message_Title)",
                                text: "Thành công",
                                type: "success",
                                timer: 4000,
                                showConfirmButton: true,
                            }, function () {
                                window.location = window.location;


                            });
                    }
                    else {
                        swal({
                            title: "@Html.Raw(Global.Message_Title)",
                            text: data.code,
                            type: "error",
                            timer: 4000,
                            showConfirmButton: true,
                        });
                    }
                },
                error: function (jqXHR, exception) {
                    showError(jqXHR, exception);
                },
                complete: function () {
                    $('#panel_body').unblock();
                },
            });
        });
        $("#txtInCome").ForceNumericOnly();
        $("#txtInCome").change(function () {
        $("#txtInCome").val(formatCurrency($("#txtInCome").val().replace(/\./g, '')));
        });

        var hoso = @Html.Raw(Json.Encode(ViewBag.model));
		
		if(hoso.IsDuplicateAdrees)
		{
				$('#IsDuplicateAdreesHas').prop('checked',true);
		}
		 else 
		{
		
		$('#IsDuplicateAdreesNo').prop('checked',true);
		}
		 


		
        $("#CurAddressRegion").val(hoso.CurAddressRegion);
        $("#CurAddressStreet").val(hoso.CurAddressStreet);
        $("#CurAddressNumber").val(hoso.CurAddressNumber);
		GetAllStatus(hoso.Status);
	
		

        $("#RegAddressRegion").val(hoso.RegAddressRegion);
        $("#RegAddressStreet").val(hoso.RegAddressStreet);
        $("#RegAddressNumber").val(hoso.RegAddressNumber);
		
		$('#ddlGioiTinh').val(hoso.Gender == true ? 1:0);


        $('#ddlSanPhamVay').chosen({ width: '100%', allow_single_deselect: true });
        $('#ddlCourier').chosen({ width: '100%', allow_single_deselect: true });
        $('#ddlHuyen').chosen({ width: '100%', allow_single_deselect: true });
        $('#ddlTinh').chosen({ width: '100%', allow_single_deselect: true });
        $("#ddlloaisanpham").val("@ViewBag.model.IncomeType");

        setdanhsachloaisanpham("@ViewBag.model.IncomeType","@ViewBag.model.ProductId");

        $('#RegAddressProvinceId').chosen({ width: '100%', allow_single_deselect: true });

        $('#RegAddressDistId').chosen({ width: '100%', allow_single_deselect: true });

		
        $('#RegAddressWardId').chosen({ width: '100%', allow_single_deselect: true });
        $('#RegAddressProvinceId').chosen({ width: '100%', allow_single_deselect: true });

        $("#txtToDate").datepicker({ dateFormat: 'yy/mm/dd' }).datepicker("setDate", new Date().getDay + 0);



    
        $('#txtCmndDay').datepicker({
            dateFormat: 'dd-mm-yy'

        }).next().on(ace.click_event, function () {
            $(this).prev().focus();
        });
	  
       

		$('#txtBirhDay').datepicker({
            dateFormat: 'dd-mm-yy'

        }).next().on(ace.click_event, function () {
            $(this).prev().focus();
        });

    

        $('#txtCmndDay').val(SetFormatDateTimeDMY(hoso.IdIssueDate));
		
		  $("#txtBirhDay").val(SetFormatDateTimeDMY(hoso.BirthDay));

          $('#ddlTinh').on('change', function () {
            LayDSHuyen(this.value);
        });
		
		
		 $('#ddlHuyen').on('change', function () {
            laydanhsachReward(this.value);
			
			
        }); 


        $('#RegAddressProvinceId').on('change', function () {
            laydanhsachthanhphothuongtru(this.value);
        });
		
		
		 $('#RegAddressDistId').on('change', function () {
            laydanhsachwarchThuongtru(this.value);
			
			
        });

        //$("#txtCmndDay").datepicker({ dateFormat: 'yy/mm/dd' }).datepicker("setDate", new Date().getDay + 0);

   

         laydanhsachtinh("#RegAddressProvinceId","@ViewBag.model.RegAddressProvinceId",
           "@ViewBag.model.RegAddressDistId",
            "#RegAddressDistId",
           "#RegAddressWardId",
           "@ViewBag.model.RegAddressWardId");
		
		    laydanhsachtinh("#ddlTinh","@ViewBag.model.CurAddressProvinceId",
           "@ViewBag.model.CurAddressDistId",
           "#ddlHuyen",
           "#ddlReward",
           "@ViewBag.model.CurAddressWardId");


           Getcomments();
		   
		 


    });

   function LayDSTinh() {
        $.ajax({
            type: "get",
            url: '@Url.Action("LayDanhSachTinh", "Ocb")',
            data: {},
            success: function (data) {
                $('#ddlTinh').empty();

                $('#RegAddressProvinceId').empty();
                $('#ddlTinh').append("<option value='0'></option>");

                   $('#RegAddressProvinceId').append("<option value='0'></option>");
                if (data != null) {
                    $.each(data.data, function (index, optionData) {
                        $('#ddlTinh').append("<option value='" + optionData.ProvinceId + "'>" + optionData.ProvinceName + "</option>");

                          $('#RegAddressProvinceId').append("<option value='" + optionData.ProvinceId + "'>" + optionData.ProvinceName + "</option>");
                    });
                }
                $('#ddlTinh').chosen().trigger("chosen:updated");
                   $('#RegAddressProvinceId').chosen().trigger("chosen:updated");
            },
            complete: function () {
            },
            error: function (jqXHR, exception) {
                showError(jqXHR, exception);
            }
        });
    }


    

    function laydanhsachReward(ciityCode) {
        $.ajax({
            type: "get",
            url: '@Url.Action("LayDanhSachWard", "Ocb")',
            data: {'cityCode':ciityCode},
            success: function (data) {
                $('#ddlReward').empty();
                $('#ddlReward').append("<option value='0'></option>");
                if (data != null) {
                    $.each(data.data, function (index, optionData) {
                        $('#ddlReward').append("<option value='" + optionData.WardId + "'>" + optionData.WardName + "</option>");
                    });
                }
                $('#ddlReward').chosen().trigger("chosen:updated");
            },
            complete: function () {
            },
            error: function (jqXHR, exception) {
                showError(jqXHR, exception);
            }
