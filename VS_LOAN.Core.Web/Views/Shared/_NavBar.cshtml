    </script>
</div>

<script type="text/javascript">

    function doLogout() {
        $.ajax({
            type: "POST",
            datatype: "JSON",
            url: '@Url.Action("DangXuat", "NhanVien", new { area="" })',
            success: function (data) {
                 window.location = data.newurl;
            },
            error: function (jqXHR, exception) { if (jqXHR.status != 0) alert('Error'); }
        });
    };
</script>
