@using VS_LOAN.Core.Web.Resources;
@{
    ViewBag.Title = "Cập nhật khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content-inner">
    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-caret-right"></i>
                <a href="#">Tạo Khách hàng</a>
            </li>
        </ul>
    </div>
    <div class="page-content" id="panel_body">
        <div class="row">
            <div class="col-xs-12">
                <h3 class="header smaller lighter blue">1.Thông tin khách hàng:</h3>
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="form-field-1" class="col-sm-2 control-label no-padding-right">Họ và tên <span class="required">(*)</span> </label>
                        <div class="col-sm-4">
                            <input type="text" id="txtHoTen" placeholder="Nhập họ tên" class="form-control">
                        </div>

                    </div>
                    <div class="form-group">
                        <label for="form-field-1" class="col-sm-2 control-label no-padding-right">Ngày Check<span class="required">(*)</span></label>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <input class="form-control date-picker" id="txtCheckDate" />
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar bigger-110"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="form-field-1" class="col-sm-2 control-label no-padding-right">Số CMND<span class="required">(*)</span></label>
                        <div class="col-sm-4">
                            <input type="text" id="txtCMND" placeholder="Nhập số CMND" class="form-control" />
                        </div>

                    </div>
                    <div class="form-group">
                        <label for="form-field-1" class="col-sm-2 control-label no-padding-right">Ngày sinh</label>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <input class="form-control date-picker" id="txtBirthDay" />
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar bigger-110"></i>
                                </span>
                            </div>

                        </div>

                    </div>
                    <div class="form-group">
                        <label for="form-field-1" class="col-sm-2 control-label no-padding-right">Điện thoại</label>
                        <div class="col-sm-4">
                            <input type="text" id="txtPhone" placeholder="Điện thoại khách hàng " class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="form-field-1" class="col-sm-2 control-label no-padding-right">Tính thành<span class="required">(*)</span></label>
                        <div class="col-sm-4">
                            <select id="ddlProvince" class="chosen-select form-control" data-placeholder="Chọn tỉnh thành phố">
                                <option value="0"></option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="form-field-1" class="col-sm-2 control-label no-padding-right">Địa chỉ<span class="required">(*)</span></label>
                        <div class="col-sm-4">
                            <textarea type="text" id="txtAddress" placeholder="Nhập địa chỉ" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="form-field-1" class="col-sm-2 control-label no-padding-right">Thu nhập hàng tháng</label>
                        <div class="col-sm-4">
                            <input type="text" id="txtSalary" placeholder="Thu nhập hàng tháng" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right">CIC<span class="required">(*)</span></label>
                        <div class="col-sm-4">
                            <select id="ddlCIC" class="chosen-select form-control" data-placeholder="">
                                <option value="0">Không nợ xấu</option>
                                <option value="1">Nợ chú ý</option>
                                <option value="2">Nợ xấu</option>
                            </select>
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label no-padding-right">Tên ngân hàng<span class="required">(*)</span></label>
                        <div class="col-sm-4">
                            <select id="ddlDoiTac" class="chosen-select form-control" data-placeholder="Chọn đối tác">
                                <option value="0"></option>
                            </select>
                        </div>

                    </div>
                    <div class="form-group">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-4">
                            <label class="control-label no-padding-right">
                                <input name="radio-check" id="rdChecked" type="radio" checked="checked" value="1" class="ace">
                                <span class="lbl">Đủ điều kiện</span>
                            </label>
                            <label class="control-label no-padding-right">
                                <input name="radio-check" id="rdUnChecked" type="radio" value="0" class="ace">
                                <span class="lbl">Không đủ điều kiện</span>
                            </label>
                        </div>

                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <hr />
                <form class="form-horizontal">
                    <h4 class="header lighter orange"><i class="ace-icon fa fa-bell"></i>Ghi chú</h4>
                    <div class="form-group">
                        <label class="col-sm-1  col-xs-12 control-label no-padding-right" for="form-field-1">Ghi chú</label>
                        <div class="col-md-11 col-sm-12 col-xs-12">
                            <textarea class="form-control" id="txtGhiChu" style="margin: 0px -4.5px 0px 0px; height: 50px;" placeholder="Nhập ghi chú"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="col-md-8 activity-log">
                                <div class="timline-addNote only-new-note">
                                    <div class="timeline-date-event timline-date-event--margin mt-0" id="dsGhichu">


                                    </div>
                                </div>
                            </div>
                            <div class="pull-right">

                                <a class="btn btn-sm btn-primary" id="btnSave">
                                    Lưu
                                </a>

                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
<script>
    var customer = @Html.Raw(Json.Encode(ViewBag.Customer));
    var model = {
        Customer: customer,
        Partners:[]
    }
    var partners = null
    $(document).ready(function () {
        getPartner()
        GetNotes(customer.Id)
        let gender = customer.Gender == false ? "0" :"1"
        $("#txtHoTen").val(customer.FullName)
        setDateTimeInput('#txtCheckDate')
        setValueForDateInput("#txtCheckDate", customer.CheckDate)
        //$("#txtCheckDate").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", new Date().getDay + 0);
        //let checkDate = isNullOrUndefined(customer.CheckDate) ? new Date().getDay + 0 : customer.CheckDate
        //$('#txtToDate').val(SetFormatDateTimeDMY(checkDate));
        $("#txtCMND").val(customer.Cmnd)

        $("#ddlCIC").val(customer.CICStatus)
        $('#txtBirthDay').datepicker({
            dateFormat: 'dd/mm/yy'
        }).next().on(ace.click_event, function () {
            $(this).prev().focus();
        });
        $("#txtBirthDay").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker("setDate", new Date().getDay + 0);
        $('#ddlProvince').chosen({ width: '100%', allow_single_deselect: true });
        getPartner();
        getProvinces("#ddlProvince", customer.ProvinceId);
        $('#txtBirthDay').val(SetFormatDateTimeDMY(customer.BirthDay));
        $('#txtSalary').val(customer.Salary);
        $('#txtPhone').val(customer.Phone);
        $('#txtAddress').val(customer.Address);
    })
    function getPartner() {
         $.ajax({
             type: "GET",
             url: '/Customer/GetPartner?customerId=' + customer.Id,
             success: function (data) {
                 partners = data.data
                 $('#ddlDoiTac').empty();
                 if (data != null) {
                     var checked = data.data.find(p=>p.IsSelect==true);
                     $.each(data.data, function (index, item) {
                        $('#ddlDoiTac').append("<option value='" + item.Id + "'>" + item.Name + "</option>");
                     });
                     if (customer.Status == 0) {
                         $("#rdChecked").prop("checked", true);
                         $("#rdUnChecked").prop("checked", false);
                     }
                     else {
                         $("#ddlDoiTac").val(customer.PartnerId);
                         $("#rdChecked").prop("checked", customer.IsMatch);
                         $("#rdUnChecked").prop("checked", !customer.IsMatch);
                     }

                }

            },
            complete: function () {
            },
            error: function (jqXHR, exception) {
                showError(jqXHR, exception);
            }
        });
    }
    function onPartnerCheck(id) {
        var checked = $("#partner_" + id).is(':checked');
        var index = partners.findIndex(p => p.Id == id)
        if (index < 0)
            return;
        partners[index].IsSelect = checked

    }
    jQuery.fn.ForceNumericOnly = function () {
    return this.each(function () {
        $(this).keydown(function (e) {
            var key = e.charCode || e.keyCode || 0;
            // allow backspace, tab, delete, enter, arrows, numbers and keypad numbers ONLY
            // home, end, period, and numpad decimal
            return (
                key == 8 ||
                key == 9 ||
                key == 13 ||
                key == 46 ||
                key == 110 ||
                key == 190 ||
                (key >= 35 && key <= 40) ||
                (key >= 48 && key <= 57) ||
                (key >= 96 && key <= 105));
        });
    });
};
    $("#txtDienThoai").ForceNumericOnly();
    $("#txtCMND").ForceNumericOnly();
    $("#txtPhone").ForceNumericOnly();
    $("#txtSalary").ForceNumericOnly();
    $('#btnSave').click(function (e) {

        if (isNullOrWhiteSpace($('#txtCheckDate').val())) {
            swal({
                title: "@Html.Raw(Global.Message_Title)",
                text: "Ngày check không hợp lệ",
                type: "error",
                timer: 4000,
                showConfirmButton: true,
            });
            return;
        }

        if ($('#txtCMND').val().length != 9 && $('#txtCMND').val().length != 12) {
            swal({
                title: "@Html.Raw(Global.Message_Title)",
                text: "Số CMND chỉ 9 hoặc 12 số!",
                type: "error",
                timer: 4000,
                showConfirmButton: true,
            });
            return;
            }
            customer.FullName = $('#txtHoTen').val()
            customer.CheckDate = $('#txtCheckDate').val()
            customer.Note = $('#txtGhiChu').val()
            customer.Cmnd = $('#txtCMND').val()
            customer.Gender = 0
            customer.CICStatus = $("#ddlCIC").val()
            customer.ProvinceId = $("#ddlProvince").val(),
            customer.Address = $('#txtAddress').val(),
            customer.BirthDay = $('#txtBirthDay').val(),
            customer.Phone = $('#txtPhone').val(),
            customer.Salary = $('#txtSalary').val()
            model.Customer = customer;
        model.Partners = [{ Id: $("#ddlDoiTac").val(), Name: $("#ddlDoiTac option:selected").text(), IsSelect: $('input[name="radio-check"]:checked').val() == "1" ? true : false }];
            var objectSend = JSON.stringify(model);
        $.ajax({
            traditional: true,
            url: '@Url.Action("Update", "Customer")',
            type: "POST",
            contentType: "application/json; charset=utf-8",
            data: objectSend,
            success: function (data) {
                if (data.success == true) {
                    swal({
                        title: "Thành công",
                        text: "Cập nhật thành công",
                        type: "success",
                        timer: 4000,
                        showConfirmButton: true,
                    }, function () {
                        window.location = "/Customer/Index";
                    });
                }
                else {
                    swal({
                        title: "Lỗi",
                        text: data.code,
                        type: "error",
                        timer: 4000,
                        showConfirmButton: true,
                    });
                }
            },
            error: function (jqXHR, exception) {
                showError(jqXHR, exception);
            },
            complete: function () {
                $('#panel_body').unblock();
            },
        });
        });
    function GetNotes(id) {
        //$('#ddlTrangThai').empty();
        if (isNullOrUndefined(id))
            return;
        $.ajax({
            type: "GET",
            url: '/Customer/GetNotes?customerId=' + id,
            data: {},
            success: function (data) {

                if (data.data != null) {
                    $.each(data.data, function (index, item) {
                        $('#dsGhichu').append(
                            '<div class="timeline-event-content  active">' +
                            '<div class="timeline-item">'+
                            '<div class="timeline-body">' +
                            '<div class="timeline__message-container">' +
                            '<strong>' + item.Commentator + ' (' + SetFormatDateTimeDMY(item.CreatedTime) + '): </strong><span>' + item.Note + '</span>' +
                            '</div></div></div></div>'

                        )
                    });
                }

            },
            complete: function () {
            },
            error: function (jqXHR, exception) {
                showError(jqXHR, exception);
            }
        });
    }
</script>