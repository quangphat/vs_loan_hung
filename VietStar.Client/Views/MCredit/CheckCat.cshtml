
@{
    ViewData["Title"] = "Check CAT";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content-inner">
    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-caret-right"></i>
                <a href="#">Check CAT</a>
            </li>
        </ul>
    </div>
    <div class="page-content" id="panel_body">
        <div class="row">
            <div class="col-xs-12">
                <div class="col-xs-4">
                    <form role="form">
                        <div class="form-group">
                            <label for="form-field-1">Mã số thuế<span class="required">(*)</span> </label>
                            <input type="text" id="txtCatNumber" placeholder="" class="form-control">
                        </div>

                        <button type="button" id="btnSave" class="btn btn-info pull-right">Kiểm tra</button>
                    </form>
                </div>
                <div id="checkcat-area">
                    <div class="col-sm-10">
                        <label style="color:green" id="checkcat-result"> </label>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script>



    $("#txtTaxNumber").ForceNumericOnlyv2();

    let modelCat = { CatName: '', ComName: '', CatNumber: '' }
    $('#btnSave').click(function (e) {

        let value = $("#txtCatNumber").val();
        var objectSend = JSON.stringify({
            'Value': value
        });
        $.ajax({
            traditional: true,
            url: '/MCredit/CheckCatApi',
            type: "POST",
            contentType: "application/json; charset=utf-8",
            data: objectSend,
            success: function (data) {

                if (data.success == true) {
                    swal({
                        title: "Thành công",
                        text: data.code,
                        type: "success",
                        timer: 4000,
                        showConfirmButton: true,
                    });
                    $("#checkcat-result").text(`Kết quả: ${data.data.name} - ${data.data.cat}`);
                    modelCat = { CatName: data.data.cat, CatNumber: value, ComName: data.data.name }
                }
                else {
                    swal({
                        title: data.error.code,
                        text: data.error.code,
                        type: "error",
                        timer: 4000,
                        showConfirmButton: true,
                    });
                    $("#checkcat-result").text(`Kết quả: ${data.error.code}`);
                }
            },
            error: function (jqXHR, exception) {
                showError(jqXHR, exception);
            },
            complete: function () {
                $('#panel_body').unblock();
            },
        });
    });

</script>

