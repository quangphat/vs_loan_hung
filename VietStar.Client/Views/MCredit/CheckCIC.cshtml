@model VietStar.Entities.Mcredit.CheckCICModel
@{
    ViewData["Title"] = "Check CIC";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="main-content-inner">
    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li>
                <i class="fa fa-caret-right"></i>
                <a href="#">Check CIC</a>
            </li>
        </ul>
    </div>
    <div class="page-content" id="panel_body">
        <div class="row">
            <div class="col-xs-12">
                <div class="col-xs-4">
                    <form>
                        <div class="form-group">
                            <label for="inputEmail3">Số Cmnd/CCCD</label>
                            <input type="text" class="form-control" id="IdNumber" asp-for="IdNumber" />
                        </div>
                        <div class="form-group">
                            <label for="inputPassword3">Tên</label>
                            <input type="text" class="form-control" name="" asp-for="Name" />
                        </div>
                        <button type="button" id="btnSave" class="btn btn-info pull-right">Kiểm tra</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>


    $("#txtValue").ForceNumericOnlyv2();
    function getMessage(data) {
        let relate = ''
        let result =''
        if (data == null || isNullOrUndefined(data))
            return ''
        if (!isNullOrWhiteSpace(data.Relate))
            relate = data.Relate;
        if (!isNullOrWhiteSpace(data.Result))
            result = data.Result
        return `${relate} - ${result}`;
    }
    $('#btnSave').click(function (e) {

        var objectSend = JSON.stringify({
            'IdNumber': $("#IdNumber").val(),
            'Name': $("#Name").val(),
        });
        $.ajax({
            traditional: true,
            url: '@Url.Action("CheckCICApi", "MCredit")',
            type: "POST",
            contentType: "application/json; charset=utf-8",
            data: objectSend,
            success: function (data) {
                if (data.success == true) {
                    swal({
                        title: successMsg,
                        text: `${getMessage(data.data)}`,
                        type: "success",
                        timer: 4000,
                        showConfirmButton: true,
                    }, function () {

                    });
                }
                else {
                    swal({
                        title: errorMsg,
                        text: data.error.code,
                        type: "error",
                        timer: 4000,
                        showConfirmButton: true,
                    });
                }
            },
            error: function (jqXHR, exception) {
                showError(jqXHR, exception);
            },
            complete: function () {
                $('#panel_body').unblock();
            },
        });
    });

</script>

