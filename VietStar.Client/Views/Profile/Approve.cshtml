<script>
    var queries = new URLSearchParams(window.location.search);
    var page = 1;
    var limit = 10;
    var pageMargin = 2;
    var totalPage = 1;
    var totalRecord = 0;
    var sort = 'desc'
    var sortField ='updatedtime'
    var model = { status:'', freeText :'', fromDate:'',toDate:'', groupId:0, memberId:0};
    $(document).ready(function e() {
